<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aviato.android.aviato" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FlightInfoActivity"
            android:label="Flight Info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".BubblesActivity"
            android:label="Bubble Page"
            android:parentActivityName=".FlightInfoActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aviato.android.aviato.FlightInfoActivity" />
        </activity>
        <activity
            android:name=".TransportationModeActivity"
            android:label="Mode of Transportation"
            android:parentActivityName=".BubblesActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aviato.android.aviato.BubblesActivity" />
        </activity>
    </application>

</manifest>
